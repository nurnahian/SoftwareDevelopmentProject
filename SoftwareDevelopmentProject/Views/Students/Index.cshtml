@model IEnumerable<SoftwareDevelopmentProject.Models.tbl_students>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Student</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-info btn-outline-dark" })
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            No
        </th>
        <th>
            @Html.DisplayNameFor(model => model.st_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.st_registration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.st_semester11)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.st_semester22)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.st_semester33)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tbl_studyCenter.study_center_code)
        </th>
        <th>
            Action
        </th>
    </tr>
    @{ int i = 1; }
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @i
            </td>
            @{ i++; }
            <td>
                @Html.DisplayFor(modelItem => item.st_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.st_registration)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.st_semester11)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.st_semester22)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.st_semester33)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tbl_studyCenter.study_center_code)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.st_registration }, new { @class = "btn btn-outline-warning" }) |
                @Html.ActionLink("Details", "Details", new { id = item.st_registration }, new { @class = "btn btn-outline-secondary" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.st_registration }, new { @class = "btn btn-outline-danger" })
            </td>
        </tr>
    }

</table>

@model IEnumerable<SoftwareDevelopmentProject.Models.tbl_result22>
@{
    ViewBag.Title = "Second Semester Result";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css">

</head>

<h2>Second Semester Result Export</h2>



<div class="container">
    <div class="row">
        <table id="tableData" class="display" style:"100%">
            <thead>
                <tr>
                    <th>
                        No
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.tbl_students.st_name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.tbl_students.st_registration)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.tbl_semester22_subject.s22_course_code)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.tma_mark1)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.tma_mark2)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.total_tma_mark)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.experment_mark1)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.book_mark2)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.viva_mark3)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.total_practical_mark)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.exam_term)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.st_study_center)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.submit_date)
                    </th>

                </tr>

            </thead>
            <tbody>
                @{ int i = 1; }
                @foreach (var item in Model)
                {
                    <tr>
                        <td scope="row">
                            @i
                        </td>
                        @{ i++; }
                        <td>
                            @Html.DisplayFor(modelItem => item.tbl_students.st_registration)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tbl_students.st_name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tbl_semester22_subject.s22_course_code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tma_mark1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tma_mark2)
                        </td>
                        <td class="bg-warning">
                            @Html.DisplayFor(modelItem => item.total_tma_mark)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.experment_mark1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.book_mark2)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.viva_mark3)
                        </td>
                        <td class="bg-info">
                            @Html.DisplayFor(modelItem => item.total_practical_mark)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.exam_term)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.st_study_center)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.submit_date)
                        </td>
                    </tr>
                }

            </tbody>

        </table>
    </div>
</div>

@section scripts{

    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
    <script src=" https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src=" https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#tableData').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'csv', 'excel', 'pdf', 'print'
                ]
            });
        });

    </script>
}


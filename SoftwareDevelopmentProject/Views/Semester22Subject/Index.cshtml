@model IEnumerable<SoftwareDevelopmentProject.Models.tbl_semester22_subject>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mt-5">Second Semester Subject</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-info btn-outline-dark" })
</p>
<hr />
<table class="table table-striped table-responsive table-hover">
    <tr>
        <th>
            No
        </th>
        <th>
            @Html.DisplayNameFor(model => model.s22_course_code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.s22_course_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.s22_course_credit)
        </th>
        <th>
            Action
        </th>
    </tr>
    @{ int i = 1; }
    @foreach (var item in Model)
    {
        <tr>
            <td scope="row">
                @i
            </td>
            @{ i++; }
            <td>
                @Html.DisplayFor(modelItem => item.s22_course_code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.s22_course_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.s22_course_credit)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.s22_course_code }, new { @class = "btn btn-outline-warning btn-sm" }) |
                @Html.ActionLink("Details", "Details", new { id = item.s22_course_code }, new { @class = "btn btn-outline-secondary btn-sm" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.s22_course_code }, new { @class = "btn btn-outline-danger btn-sm" })
            </td>
        </tr>
    }
</table>
